    "authors": [
        "Choco"
    ],
    "contact": {
        "homepage": "https://spigotmc.org/resources/12038/",
        "sources": "https://github.com/2008Choco/VeinMiner/",
        "issues": "https://github.com/2008Choco/VeinMiner/issues/",
        "discord": "https://choco.wtf/discord/",
        "twitter": "https://twitter.com/2008Choco_"
    },

    "license": "GPLv3",
    "icon": "assets/veinminer4bukkit/icon.png",

    "environment": "client",
    "entrypoints": {
        "client": [
            "wtf.choco.veinminer.VeinMinerMod"
        ]
    },

    "accessWidener" : "veinminer4bukkit.accesswidener",
    "mixins": [
        "veinminer4bukkit.mixins.json"
